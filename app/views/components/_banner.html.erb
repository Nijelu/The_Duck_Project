<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://media.ouest-france.fr/v1/pictures/ac8b7127da31e3ed7e5eefc7be010b45-lannion-vivarmor-veut-boycotter-la-duck-race-sur-le-leguer.jpg?width=1260&height=712&fill=0&focuspoint=52%2C38&cropresize=1');">
  <div class="banner-content">
    <h1>The Project Duck</h1>
    <br> <br>
    <%= form_tag ducks_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: 'form_text',
        placeholder: 'Yello duck...'%>
      <%= submit_tag 'Search a duck!', class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>

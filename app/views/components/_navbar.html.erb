<div class="navbar-duck-project">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-duck-project-brand" do %>
    <%= image_tag 'logo.png' %>
  <% end %>

    <div class="form_in_navbar text-center">
      <%= form_tag ducks_path, method: :get do %>
      <div class="form-group">
        <%= text_field_tag :query,
          params[:query],
          class: 'form_text',
          placeholder: 'Yello duck...'%>
        <%= submit_tag 'Search a duck!', class: 'btn btn-primary'%>
      </div>
      <% end %>
    </div>
  <!-- Right Navigation -->
  <div class="navbar-duck-project-right hidden-xs hidden-sm">
    <!-- Profile picture with dropdown list -->
    <div class="navbar-duck-project-item">
      <div class="dropdown">
        <% if current_user.nil? || current_user.photo.blank? %>
        <%= image_tag "blank-avatar.png", class: "avatar dropdown-toggle", id: "navbar-duck-project-menu", data: {toggle: "dropdown"}  %>
        <% else %>
        <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-duck-project-menu", data: {toggle: "dropdown"}  %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-duck-project-dropdown-menu">
          <li><%= link_to("Log in", user_session_path) if !current_user %></li>
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete if current_user%></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-duck-project-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-duck-project-dropdown-menu">
        <li><a href="#">Empty</a></li>
        <li><a href="#">Empty</a></li>
        <li><a href="#">Empty</a></li>
      </ul>
    </div>
  </div>
</div>
